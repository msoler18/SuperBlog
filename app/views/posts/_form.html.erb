<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h1><%= form_title  %></h1>
    <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <%= @post.errors.full_messages.each do |message|  %>
            <li><%= message  %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @post do |f|  %>
     <div class="form-group">
      <%= f.text_field :title, class: "form-control input-lg", placeholder: "Enter title of post"  %> 
     </div>
     <div class="form-group">
      <%= f.text_area :content, class: "form-control input-lg", placeholder: "Enter content of post"  %> 
     </div> 
     <div class="form-group">
      <%= f.submit "Publish post", class: "btn btn-success btn-lg btn-block"  %> 
     </div>  
    <% end %>
    </div>
  </div>
</div>




