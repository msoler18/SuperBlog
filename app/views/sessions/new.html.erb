<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h1>Login</h1>
    
    <%= form_tag controller: :sessions, action: :create do  %>
      <div class="form-group">
        <%= label_tag(:email, "Email") %>
        <%= email_field_tag(:email, nil, class: "form-control input-lg") %>
      </div>
      <div class="form-group">
        <%= label_tag(:password, "Your Password")  %>
        <%= password_field_tag(:password, nil, class: "form-control input-lg")  %>
      </div>
      <div class="form-group">
        <%= submit_tag("Get in", class: "btn btn-success btn-lg btn-block")  %>
      </div>
    <% end %>      
    </div>
  </div>
</div>



  