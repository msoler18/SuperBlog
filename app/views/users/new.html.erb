<div class="container">
  <div class="row">
    <div class="col-sm-6  col-sm-offset-3">
    <h1>Register User</h1>

    <%= form_for @user do |f|  %>
      <div class="form-group">
        <%= f.text_field :name,class: "form-control input-lg", placeholder: "Enter your Name" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Enter your Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control input-lg", placeholder: "Create your Password"%>
      </div>
      <div class="form-group">
        <%= f.submit "Register", class: "btn btn-success btn-block btn-lg" %>   
      </div>
    <% end %>        
    </div>
  </div>
</div>



